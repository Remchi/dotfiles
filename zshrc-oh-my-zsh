alias v="/usr/local/bin/vim"
alias vz="v ~/.zshrc"
alias be="bundle exec"
alias fix="git diff --name-only | uniq | xargs s"
alias gres="git reset --hard HEAD; git clean -df"
alias ss="s ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Snippets"

alias jtags="ctags -R ./src && sed -i '' -E '/^(if|switch|function|module\.exports|it|describe).+language:js$/d' tags"

# Tmux aliases
alias tmk="tmux kill-server"
alias tmks="tmux kill-session -t"
alias tms="tmuxinator start"
alias tma="tmux attach -t"

alias sw="cd ~/Dropbox/MarkdownContent && v"

funciton t() {
  tree -I '.git|node_modules|bower_components|.DS_Store' --dirsfirst --filelimit 15 -L ${1:-3} -aC $2
}

# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
